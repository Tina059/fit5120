{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "lib": ["ES2018", "DOM", "DOM.Iterable"],
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["vite/client"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["node_modules"]
  }